<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{asset('bundles/ninfac/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" >
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {# permite mostrar un mensaje #}
        {% for flashMessage in app.session.flashbag.get('mensaje') %}
            <span class="alert-success">
                {{ flashMessage }}
            </span>
        {% endfor %}
       
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ asset('bundles/ninfac/js/jquery.min.js') }}" ></script>            
            <script src="{{ asset('bundles/ninfac/js/bootstrap.min.js') }}" ></script>
        {% endblock %}
    </body>
</html>
